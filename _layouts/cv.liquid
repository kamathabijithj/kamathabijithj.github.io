---
layout: default
---
{% unless site.data.resume %}
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {{ page.title }}
        {% if page.cv_pdf %}
          <a
            href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}"
            target="_blank"
            rel="noopener noreferrer"
            class="cv-pdf-link"
            title="Download PDF CV"
            ><i class="fa-solid fa-file-pdf"></i>
          </a>
        {% endif %}
      </h1>
      {% if page.description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>

    <article>
      <div class="cv-modern">
        {% for entry in site.data.cv %}
          <a class="anchor" id="{{ entry.title }}"></a>
          <div class="cv-section-card">
            <div class="cv-section-header">
              <h3 class="cv-section-title">
                <i class="cv-section-icon {% if entry.title == 'General Information' %}fas fa-user{% elsif entry.title == 'Education' %}fas fa-graduation-cap{% elsif entry.title == 'Experience' %}fas fa-briefcase{% elsif entry.title == 'Publications' %}fas fa-file-alt{% elsif entry.title == 'Awards' %}fas fa-trophy{% elsif entry.title == 'Skills' %}fas fa-code{% else %}fas fa-circle{% endif %}"></i>
                {{ entry.title }}
              </h3>
            </div>
            <div class="cv-section-content">
              {% if entry.type == 'list' %}
                {% include cv/list.liquid %}
              {% elsif entry.type == 'map' %}
                {% include cv/map.liquid %}
              {% elsif entry.type == 'nested_list' %}
                {% include cv/nested_list.liquid %}
              {% elsif entry.type == 'time_table' %}
                {% include cv/time_table.liquid %}
              {% elsif entry.type == 'list_groups' %}
                {% include cv/list_groups.liquid %}
              {% else %}
                {{ entry.contents }}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </article>
  </div>
{% else %}
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {{ page.title }}
        {% if page.cv_pdf %}
          <a
            href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}"
            target="_blank"
            rel="noopener noreferrer"
            class="cv-pdf-link"
            title="Download PDF CV"
            ><i class="fa-solid fa-file-pdf"></i>
          </a>
        {% endif %}
      </h1>
      {% if page.description %}
        <p class="post-description">{{ page.description }}</p>
      {% endif %}
    </header>

    <article>
      <div class="cv-modern">
        {% for data in site.data.resume %}
          {% if site.jsonresume and site.jsonresume.size > 0 %}
            {% unless site.jsonresume contains data[0] %}
              {% continue %}
            {% endunless %}
          {% endif %}
          {% if data[0] == 'meta' or data[1].size == 0 %} {% continue %} {% endif %}
          <a class="anchor" id="{{ data[0] }}"></a>
          <div class="cv-section-card">
            <div class="cv-section-header">
              <h3 class="cv-section-title">
                <i class="cv-section-icon {% if data[0] == 'basics' %}fas fa-user{% elsif data[0] == 'education' %}fas fa-graduation-cap{% elsif data[0] == 'work' %}fas fa-briefcase{% elsif data[0] == 'publications' %}fas fa-file-alt{% elsif data[0] == 'awards' %}fas fa-trophy{% elsif data[0] == 'skills' %}fas fa-code{% elsif data[0] == 'volunteer' %}fas fa-hands-helping{% elsif data[0] == 'projects' %}fas fa-project-diagram{% else %}fas fa-circle{% endif %}"></i>
                {{ data[0] | capitalize }}
              </h3>
            </div>
            <div class="cv-section-content">
              {% case data[0] %}
                {% when 'basics' %}
                  {% include resume/basics.liquid %}
                {% when 'education' %}
                  {% include resume/education.liquid %}
                {% when 'work' %}
                  {% include resume/work.liquid %}
                {% when 'volunteer' %}
                  {% include resume/volunteer.liquid %}
                {% when 'projects' %}
                  {% include resume/projects.liquid %}
                {% when 'awards' %}
                  {% include resume/awards.liquid %}
                {% when 'skills' %}
                  {% include resume/skills.liquid %}
                {% when 'publications' %}
                  {% include resume/publications.liquid %}
                {% when 'languages' %}
                  {% include resume/languages.liquid %}
                {% when 'interests' %}
                  {% include resume/interests.liquid %}
                {% when 'certificates' %}
                  {% include resume/certificates.liquid %}
                {% when 'references' %}
                  {% include resume/references.liquid %}
                {% else %}

              {% endcase %}
            </div>
          </div>
        {% endfor %}
      </div>
    </article>
  </div>
{% endunless %}

<style>
/* Enhanced CV Page Styling - Minimal Swiss Design */
.post-header {
  margin-bottom: 2rem;
}

.post-title {
  color: var(--global-text-color);
  font-weight: 600;
  border-bottom: 2px solid var(--global-theme-color);
  padding-bottom: 0.5rem;
  margin-bottom: 1rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cv-pdf-link {
  font-size: 1.5rem;
  color: var(--global-theme-color);
  transition: color 0.2s ease;
}

.cv-pdf-link:hover {
  color: var(--global-text-color);
}

.post-description {
  font-size: 1.1rem;
  color: var(--global-text-color-light);
  margin-bottom: 0;
}

.cv-modern {
  display: flex;
  flex-direction: column;
  gap: 3rem;
}

.cv-section-card {
  background-color: transparent;
  border: none;
  padding: 0;
  margin-bottom: 0;
}

.cv-section-header {
  margin-bottom: 1.5rem;
  border-bottom: 2px solid var(--global-theme-color);
  padding-bottom: 0.5rem;
}

.cv-section-title {
  color: var(--global-text-color);
  font-weight: 600;
  font-size: 1.35rem;
  margin: 0;
  display: flex;
  align-items: center;
}

.cv-section-icon {
  margin-right: 0.75rem;
  font-size: 1.1rem;
  opacity: 0.8;
}

/* CV Timeline Styles */
.cv-timeline {
  position: relative;
  padding-left: 0;
}

.cv-timeline-item {
  position: relative;
  padding-bottom: 2rem;
  border-left: 2px solid var(--global-divider-color);
  padding-left: 2rem;
  margin-left: 0.5rem;
}

.cv-timeline-item:last-child {
  border-left: 2px solid transparent;
}

.cv-timeline-marker {
  position: absolute;
  left: -0.6rem;
  top: 0;
  width: 1rem;
  height: 1rem;
  border-radius: 50%;
  background-color: var(--global-bg-color);
  border: 2px solid var(--global-theme-color);
  z-index: 1;
}

.cv-item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 0.5rem;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.cv-item-title {
  font-weight: 600;
  font-size: 1.1rem;
  color: var(--global-text-color);
  margin: 0;
}

.cv-item-subtitle {
  font-size: 1rem;
  color: var(--global-text-color);
  margin-bottom: 0.5rem;
  font-weight: 500;
}

.cv-year-badge {
  background-color: transparent;
  color: var(--global-text-color-light);
  padding: 0;
  border-radius: 0;
  font-size: 0.9rem;
  font-weight: 500;
  white-space: nowrap;
}

.cv-item-content {
  color: var(--global-text-color-light);
  font-size: 0.95rem;
  line-height: 1.6;
}

.cv-item-content ul {
  padding-left: 1.2rem;
  margin-bottom: 0.5rem;
}

.cv-item-content li {
  margin-bottom: 0.3rem;
}

.cv-links {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-top: 0.5rem;
}

.cv-link-button {
  background-color: transparent;
  color: var(--global-theme-color) !important;
  padding: 0;
  border-radius: 0;
  text-decoration: none !important;
  font-size: 0.9rem;
  font-weight: 500;
  transition: color 0.2s ease;
  box-shadow: none;
  border: none;
  display: inline-block;
}

.cv-link-button:hover {
  background-color: transparent;
  transform: none;
  box-shadow: none;
  color: var(--global-text-color) !important;
  text-decoration: underline !important;
}

/* CV List Groups Styles (for Skills) */
.cv-list-groups {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.cv-group-section {
  background-color: transparent;
  border-radius: 0;
  padding: 0;
  border: none;
  transition: none;
}

.cv-group-section:hover {
  transform: none;
  box-shadow: none;
  border-color: transparent;
}

.cv-group-header {
  display: flex;
  align-items: center;
  margin-bottom: 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid var(--global-divider-color);
}

.cv-group-icon {
  color: var(--global-theme-color);
  font-size: 1rem;
  margin-right: 0.5rem;
}

.cv-group-title {
  color: var(--global-theme-color);
  font-weight: 600;
  font-size: 1.1rem;
  margin: 0;
}

.cv-group-items {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.cv-group-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 0.5rem 0;
  background-color: transparent;
  border-radius: 0;
  border-bottom: 1px solid var(--global-divider-color);
  transition: none;
}

.cv-group-item:last-child {
  border-bottom: none;
}

.cv-group-item:hover {
  border-color: var(--global-divider-color);
  transform: none;
}

.cv-item-main {
  flex: 1;
}

.cv-item-name {
  font-weight: 600;
  color: var(--global-text-color);
  margin-bottom: 0.2rem;
  font-size: 1rem;
}

.cv-item-details {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  align-items: center;
}

.cv-item-level,
.cv-item-school,
.cv-item-time {
  font-size: 0.85rem;
  color: var(--global-text-color-light);
  background-color: transparent;
  padding: 0;
  border-radius: 0;
  border: none;
}

.cv-item-level {
  background: transparent;
  color: var(--global-theme-color);
  font-weight: 500;
}

.cv-item-link {
  margin-left: 1rem;
  flex-shrink: 0;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .cv-year-badge {
    min-width: auto;
    max-width: 100%;
  }
  
  .cv-list-groups {
    grid-template-columns: 1fr;
  }
  
  .cv-group-item {
    flex-direction: column;
    align-items: stretch;
    gap: 0.5rem;
  }
  
  .cv-item-link {
    margin-left: 0;
    align-self: flex-start;
  }
  
  .cv-item-details {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
  }
}

/* Dark mode enhancements */
html[data-theme="dark"] .cv-group-section {
  background-color: transparent;
  border-color: transparent;
}

html[data-theme="dark"] .cv-group-section:hover {
  box-shadow: none;
}

html[data-theme="dark"] .cv-group-item {
  background-color: transparent;
  border-color: var(--global-divider-color);
}

html[data-theme="dark"] .cv-item-level,
html[data-theme="dark"] .cv-item-school,
html[data-theme="dark"] .cv-item-time {
  background-color: transparent;
  border-color: transparent;
}

/* CV Clean List Styles (for Languages, References, etc.) */
.cv-clean-list {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.cv-list-item {
  display: flex;
  align-items: center;
  padding: 0.5rem 0;
  background-color: transparent;
  border-radius: 0;
  border-bottom: 1px solid var(--global-divider-color);
  transition: none;
}

.cv-list-item:last-child {
  border-bottom: none;
}

.cv-list-item:hover {
  background-color: transparent;
  border-color: var(--global-divider-color);
  transform: none;
}

.cv-list-bullet {
  color: var(--global-theme-color);
  font-size: 0.4rem;
  margin-right: 0.75rem;
  opacity: 0.8;
}

.cv-list-content {
  flex: 1;
  color: var(--global-text-color);
  font-size: 0.95rem;
  line-height: 1.4;
}

/* CV Info Grid Styles (for General Information) */
.cv-info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
}

.cv-info-item {
  background-color: transparent;
  border-radius: 0;
  padding: 0;
  border: none;
  transition: none;
  position: relative;
  overflow: visible;
  border-left: 2px solid var(--global-divider-color);
  padding-left: 1rem;
}

.cv-info-item::before {
  display: none;
}

.cv-info-item:hover {
  transform: none;
  box-shadow: none;
  border-color: var(--global-theme-color);
}

.cv-info-label {
  display: flex;
  align-items: center;
  margin-bottom: 0.5rem;
  color: var(--global-theme-color);
  font-weight: 600;
}

.cv-info-icon {
  margin-right: 0.5rem;
  font-size: 0.9rem;
  opacity: 0.8;
}

.cv-info-value {
  color: var(--global-text-color);
  font-size: 0.95rem;
  line-height: 1.5;
  margin-bottom: 0.5rem;
}

.cv-info-links {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-top: 0.5rem;
}

/* CV Nested Sections Styles (for Skills, References) */
.cv-nested-sections {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.cv-nested-section {
  background-color: transparent;
  border-radius: 0;
  padding: 0;
  border: none;
  transition: none;
}

.cv-nested-section:hover {
  transform: none;
  box-shadow: none;
  border-color: transparent;
}

.cv-nested-header {
  display: flex;
  align-items: center;
  margin-bottom: 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid var(--global-divider-color);
}

.cv-nested-icon {
  color: var(--global-theme-color);
  font-size: 1rem;
  margin-right: 0.5rem;
}

.cv-nested-title {
  color: var(--global-theme-color);
  font-weight: 600;
  font-size: 1.1rem;
  margin: 0;
}

.cv-nested-items {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.cv-nested-item {
  display: flex;
  align-items: flex-start;
  padding: 0.25rem 0;
  transition: none;
}

.cv-nested-item:hover {
  transform: none;
}

.cv-nested-bullet {
  color: var(--global-theme-color);
  font-size: 0.8rem;
  margin-right: 0.75rem;
  margin-top: 0.1rem;
  opacity: 0.7;
}

.cv-nested-content {
  flex: 1;
  color: var(--global-text-color);
  font-size: 0.95rem;
  line-height: 1.5;
}

/* Enhanced responsive design for all CV components */
@media (max-width: 768px) {
  .cv-info-grid {
    grid-template-columns: 1fr;
  }
  
  .cv-info-item,
  .cv-nested-section {
    padding: 0;
  }
  
  .cv-list-item {
    padding: 0.5rem 0;
  }
  
  .cv-nested-header {
    margin-bottom: 0.75rem;
  }
}

/* Dark mode compatibility for new components */
html[data-theme="dark"] .cv-list-item {
  background-color: transparent;
  border-color: var(--global-divider-color);
}

html[data-theme="dark"] .cv-list-item:hover {
  background-color: transparent;
  box-shadow: none;
}

html[data-theme="dark"] .cv-info-item {
  background-color: transparent;
  border-color: var(--global-divider-color);
}

html[data-theme="dark"] .cv-info_item:hover {
  box-shadow: none;
  border-color: var(--global-theme-color);
}

html[data-theme="dark"] .cv-nested-section {
  background-color: transparent;
  border-color: transparent;
}

html[data-theme="dark"] .cv-nested-section:hover {
  box-shadow: none;
}
</style>
